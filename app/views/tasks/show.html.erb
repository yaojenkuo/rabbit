<h1>
    <%= @task.title %>
</h1>
<p><%= @task.description %></p>
<p><%= @task.company %></p>
<button class="btn btn-default"><%= link_to "Complete Task", @task.url %></button>
<br>
<br>
<%= link_to 'Home', root_path, class: "btn btn-sm btn-default" %>
<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-sm btn-default" %>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>